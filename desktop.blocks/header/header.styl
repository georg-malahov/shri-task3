header_height := 130px

.header
	position 				fixed
	margin 					0
	top 						0
	left 						0
	right 					0
	width 					100%
	height 					header_height
	text-align 			center
	color 					#F3F3F3
	font-weight 		300
	background 			url(background.png) #4276B6
	box-shadow 			1px 0px 2px rgba(0, 0, 0, 0.75)
	box-sizing 			border-box
	z-index 				10

	&__title
		font-family		"Copse", "Helvetica Neue", Helvetica, Arial, sans-serif
		font-size 		4rem
		font-weight 	300
		margin 				0
		text-shadow 	0px 2px 0px #235796
		white-space 	nowrap
		text-overflow ellipsis
		overflow 			hidden

	&__description
		text-shadow 	rgba(0, 0, 0, 0.2) 0 1px 0
		font-size 		1.8rem
		margin	 			0px
		white-space 	nowrap
		text-overflow ellipsis
		overflow 			hidden