.player-controls
    display flex
    align-items center
    justify-content space-between

    width 100%
    height 53px
    padding 5px
    font-size 0

    background-color: #282828;
    color: #ffffff;

    text-shadow: 0px 1px 6px #000000;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
    box-sizing border-box

    &__open
    &__track
    &__btn
    &__equalizer
        display inline-block
        font-size 1.4rem

    &__btn
        visibility hidden
        .button
            width: 60px

    &__track
        width: 350px
        text-align center
        &-name
            display inline-block
            width: 100%
            white-space nowrap
            overflow hidden
            text-overflow ellipsis
