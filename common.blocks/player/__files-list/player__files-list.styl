ctx = '.player__files-list'
{ctx}
	float             right
	min-width         200px
	padding           5px

	.spin
		&_visible
			left:         50%;
			margin-left:  -14px;
			top:          3px;
			padding:      10px 0;

	&_loading
		{ctx}-content
			opacity         .5

	&-inner
		width             100%

	&-header
		padding           5px
		font-weight:      bold;
		background-color: #C8C8C8;

	&-content
		max-height        60vh
		overflow-y        auto
